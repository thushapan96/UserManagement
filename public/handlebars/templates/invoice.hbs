<div class="uk-flex uk-flex-column uk-height-1-1">
	<div class="uk-card-header sc-border-bottom uk-flex uk-flex-middle uk-flex-none">
		<div class="uk-flex-1 uk-text-truncate"><h3 class="uk-card-title sc-js-el-show uk-text-truncate">Invoice {{ invoice.number }}</h3></div>
        <div class="sc-actions sc-flex-no-shrink {{#if_isRTL}}uk-margin-right{{ else }}uk-margin-left{{/if_isRTL}}">
			<a href="#" class="sc-actions-icon mdi mdi mdi-printer sc-js-invoice-print"></a>
			<a href="#" class="sc-actions-icon mdi mdi mdi-pencil"></a>
		</div>
	</div>
	<div class="uk-card-body sc-padding sc-js-el-show sc-padding-large-top sc-js-invoice-content">
		<div class="uk-margin-bottom">
			<img src="assets/img/logo_alt.png" class="sc-invoice-logo" alt="">
			<img src="assets/img/logo.png" class="sc-invoice-logo sc-invoice-logo-light" alt="">
		</div>
		<div class="uk-grid" data-uk-grid>
			<div class="uk-flex-1 sc-print-column-3-5">
				<div class="uk-margin-medium-bottom">
					<span class="uk-text-medium uk-text-muted">Invoice from:</span>
					<address class="uk-text-medium uk-margin-mini-top">
						341 Maegan Shore Apt. 572<br>
						Lake Oleberg<br>
						tel.: 997-531-4098<br>
						email: 997-531-4098
					</address>
				</div>
				<div>
					<span class="uk-text-medium uk-text-muted">Invoice to:</span>
					<address class="uk-text-medium uk-margin-mini-top">
						{{ invoice.to_company }}<br>
						{{ invoice.to_address_1 }}<br>
						{{ invoice.to_address_2 }}
					</address>
				</div>
			</div>
			<div class="uk-width-2-5@s sc-print-column-2-5">
				<div class="uk-child-width-1-2@xl uk-grid" data-uk-grid>
					<div>
						<span class="uk-text-medium uk-text-muted">Invoice:</span>
						<p class="uk-margin-bottom-remove uk-margin-mini-top"><span class="sc-text-semibold">{{ invoice.number }}</span></p>
					</div>
					<div>
						<span class="uk-text-medium uk-text-muted">Due date:</span>
						<p class="uk-margin-bottom-remove uk-margin-mini-top">{{ invoice.date }}</p>
					</div>
				</div>
				<div class="uk-grid" data-uk-grid>
					<div>
						<span class="uk-text-medium uk-text-muted">Amount Due:</span>
						{{#intl locales=invoice.locales }}
							<p class="uk-margin-remove uk-text-xlarge sc-text-semibold md-color-red-800">{{ formatNumber total style="currency" currency=invoice.currency }}</p>
						{{/intl}}
					</div>
				</div>
			</div>
		</div>
		<div class="uk-overflow-auto uk-margin-xlarge-top">
			<table class="uk-table uk-table-small uk-table-divider uk-table-middle">
				<thead>
					<tr class="md-bg-grey-100">
						<th>Item</th>
						<th class="uk-table-shrink uk-text-nowrap uk-text-center">Unit Price</th>
						<th class="uk-table-shrink uk-text-center">Quantity</th>
						<th class="uk-table-shrink uk-text-center">VAT</th>
						<th class="uk-table-shrink uk-text-center">Total</th>
					</tr>
				</thead>
				<tbody>
				{{#each invoice.items}}
					{{> invoice-items parent=.. }}
				{{/each}}
				</tbody>
			</table>
		</div>
		<div class="uk-margin-xlarge-top">
			<p class="md-color-grey-600 uk-text-medium uk-text-uppercase uk-margin-remove">Payment Methods</p>
			<div class="uk-child-width-1-3@m" data-uk-grid>
                <div>
                    <ul class="uk-list uk-list-divider uk-margin-small-top">
                        <li class="sc-list-group">
                            <div class="sc-list-addon">
                                <i class="mdi mdi-paypal"></i>
                            </div>
                            <div class="sc-list-body">
                                qfriesen@labadie.net
                            </div>
                        </li>
                        <li class="sc-list-group">
                            <div class="sc-list-addon">
                                <i class="mdi mdi-bank"></i>
                            </div>
                            <div class="sc-list-body">
                                meagan.herman<br>
                                5705112251220
                            </div>
                        </li>
                    </ul>
                </div>
			</div>
		</div>
	</div>
</div>
