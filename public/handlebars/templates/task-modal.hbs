<h2 class="uk-modal-title">{{ title }}</h2>
{{#if tags.length}}
<div class="uk-flex uk-flex-middle">
	{{#each tags}}
		{{#ifCond this '==' 'Integrations'}}
			<span class="uk-badge {{#if_isRTL}}uk-margin-mini-left{{ else }}uk-margin-mini-right{{/if_isRTL}} md-bg-blue-400">{{ this }}</span>
		{{/ifCond}}
		{{#ifCond this '==' 'Bug'}}
			<span class="uk-badge {{#if_isRTL}}uk-margin-mini-left{{ else }}uk-margin-mini-right{{/if_isRTL}} md-bg-red-400">{{ this }}</span>
		{{/ifCond}}
		{{#ifCond this '==' 'Feature'}}
			<span class="uk-badge {{#if_isRTL}}uk-margin-mini-left{{ else }}uk-margin-mini-right{{/if_isRTL}} md-bg-purple-400">{{ this }}</span>
		{{/ifCond}}
		{{#ifCond this '==' 'Idea'}}
			<span class="uk-badge {{#if_isRTL}}uk-margin-mini-left{{ else }}uk-margin-mini-right{{/if_isRTL}} md-bg-amber-400">{{ this }}</span>
		{{/ifCond}}
	{{/each}}
</div>
{{/if}}
<div class="uk-margin-medium-top" data-uk-grid>
	<div class="uk-flex-1">
		{{#if description }}
		<div class="sc-task-modal-description">
			<p>{{ description }}</p>
		</div>
		{{/if}}
	</div>
	<div class="uk-width-1-4@m">
		<div class="uk-text-medium md-bg-grey-100 sc-padding-medium">
			{{#if date }}
				<div>
					<span class="uk-text-muted {{#if_isRTL}}uk-margin-small-right{{ else }}uk-margin-small-left{{/if_isRTL}}">date:</span> {{ date }}
				</div>
			{{/if}}
			{{#if list }}
				<hr class="uk-margin-small">
				<div>
					<span class="uk-text-muted {{#if_isRTL}}uk-margin-small-right{{ else }}uk-margin-small-left{{/if_isRTL}}">in list:</span> <a href="#">{{ list }}</a>
				</div>
			{{/if}}
			{{#if progress}}
				<hr class="uk-margin-small">
				<div>
					<span class="uk-text-muted">progress:</span>
					<div class="uk-margin-small-top  sc-progress sc-progress-small" title="{{ progress }}%">
						{{#inRange progress '0,20'}}
							<div class="sc-progress-bar md-bg-red-400" style="width: {{ progress }}%"></div>
						{{/inRange}}
						{{#inRange progress '21,60'}}
							<div class="sc-progress-bar md-bg-amber-400" style="width: {{ progress }}%"></div>
						{{/inRange}}
						{{#inRange progress '61,100'}}
							<div class="sc-progress-bar md-bg-green-400" style="width: {{ progress }}%"></div>
						{{/inRange}}
					</div>
				</div>
			{{/if}}
			{{#if assignee.length}}
				<hr class="uk-margin-small">
				<div>
					<span class="uk-text-muted">assignees:</span>
					<div class="uk-margin-small-top uk-flex uk-flex-middle">
						{{#each assignee}}
							{{#ifCond this '==' 'user_1'}}
								<a href="#" title="keara.gleason" class="{{#if_isRTL}}uk-margin-small-left{{ else }}uk-margin-small-right{{/if_isRTL}}"><img src="assets/img/avatars/avatar_01_sm.png" class="uk-border-circle" alt=""></a>
							{{/ifCond}}
							{{#ifCond this '==' 'user_2'}}
								<a href="#" title="effertz.dashawn" class="{{#if_isRTL}}uk-margin-small-left{{ else }}uk-margin-small-right{{/if_isRTL}}"><img src="assets/img/avatars/avatar_04_sm.png" class="uk-border-circle" alt=""></a>
							{{/ifCond}}
							{{#ifCond this '==' 'user_3'}}
								<a href="#" title="millie99" class="{{#if_isRTL}}uk-margin-small-left{{ else }}uk-margin-small-right{{/if_isRTL}}"><img src="assets/img/avatars/avatar_07_sm.png" class="uk-border-circle" alt=""></a>
							{{/ifCond}}
						{{/each}}
					</div>
				</div>
			{{/if}}
		</div>
	</div>
</div>
